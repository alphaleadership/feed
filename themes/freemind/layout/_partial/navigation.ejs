<nav id="main-nav" class="navbar navbar-dark bg-dark shadow-lg navbar-expand-lg navbar-fixed-top" role="navigation">
  <div class="container">
  
    <a class="navbar-brand text-uppercase fw-bold" href="<%- config.root %>"><%= config.title %></a>
    <div class="collapse navbar-collapse nav-menu">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% theme.menu.forEach(function(m){ %>
          <li class="nav-item">
            <a href="<%- url_for(m.url) %>" title="<%- m.intro %>" class="nav-link text-light text-uppercase fw-bold">
              <i class="<%- m.icon %> fs-5 me-2"></i><%- m.title %>
            </a>
          </li>
        <% }) %>
      </ul>
      <!-- Theme Toggle Button -->
      <style>
        #theme-toggle-wrap {
          margin-left: auto; /* Pushes it to the right */
          padding-right: 15px; /* Some spacing */
        }
        #theme-toggle-button {
          background: #007bff;
          color: #fff;
          border: 1px solid #007bff;
          padding: 8px 12px;
          border-radius: 5px;
          cursor: pointer;
          font-size: 1em;
        }
        #theme-toggle-button:hover {
          background: #0056b3;
          border-color: #0056b3;
        }
      </style>
      <div id="theme-toggle-wrap">
        <button id="theme-toggle-button" onclick="toggleTheme()">Passer au mode Clair</button>
      </div>
      <!-- End Theme Toggle Button -->
    </div>
  </div> <!-- container -->
</nav>
<div class="clearfix"></div>