<% if (theme.show_title_in_excerpt) { %>
<div class="entry-show-title">
<% } else { %>
<div class="entry">
<% } %>
  <div class="row">
	<% if (item.feature ) { %>
           <% if (config.post_asset_folder){ %>
              <div class="thumbnail"><a href="<%- config.root %><%= url_for(item.path) %>"><img src="<%= item.path %><%= item.feature %>" alt="<%= item.title %>"  class="nofancybox"></a>
           <% } else { %>
              <div class="thumbnail"><a href="<%- config.root %><%= url_for(item.path) %>"><img src="<%= item.feature %>" alt="<%= item.title %>"  class="nofancybox"></a>
           <% } %>
		</div>
	<% } %>
	<a href="<%- item.lien %>" target="_blank">source</a>
	<% if (item.excerpt && index) { %>
		<%- item.excerpt %>
	<% } else { %>
		<%- item.content %>
	<% } %>
	</div>
  <a type="button" href="<%- config.root %><%- url_for(item.path) %>#more" class="btn btn-default more"><%= __('read_more') %></a>
</div>
