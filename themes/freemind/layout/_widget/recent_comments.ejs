<div class="widget card border-0 shadow-lg mb-4 bg-gradient">
  <% if(theme.comment_js) { %>
    <div class="card-header bg-dark text-white d-flex align-items-center border-0">
      <i class="bi bi-chat-dots me-2 fs-4"></i>
      <h5 class="mb-0 flex-grow-1 text-uppercase letter-spacing-1"><%= __('recent_comments') %></h5>
    </div>
    <div class="card-body p-3">
      <div id="recent-comments"></div>
      <script type="text/javascript">
        getRecentCommentsList({
          type: "<%= theme.comment_js.type %>" ? "<%= theme.comment_js.type %>" : "github",
          user: "<%= theme.comment_js.user %>",
          repo: "<%= theme.comment_js.repo %>",
          client_id: "<%= theme.comment_js.client_id %>",
          client_secret: "<%= theme.comment_js.client_secret %>",
          count: "<%= theme.comment_js.count %>" ? "<%= theme.comment_js.count %>" : 5,
          recent_comments_target: "#recent-comments"
        });
      </script>
    </div>
  <% } %>
</div>
