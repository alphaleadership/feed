<% if (site.posts.length){ %>
<div class="widget">
  <h4><%= __('recent_posts') %></h4>
  <ul class="entry list-unstyled">
    <% site.posts.sort('date', -1).limit(10).each(function(post){ %>
      <li>
        <a href="<%= url_for(post.path) %>" <% if (post.description) { %> title="<%= post.description %>" <% } %>><i class="fa fa-file-o"></i><%= post.title %></a>
      </li>
    <% }); %>
  </ul>
</div>
<% } %>