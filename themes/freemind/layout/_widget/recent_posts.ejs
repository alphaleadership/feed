<% if (site.posts.length){ %>
  <div class="widget card border-0 shadow-lg mb-4 bg-gradient">
    <div class="card-header bg-dark text-white d-flex align-items-center border-0">
      <i class="bi bi-clock-history me-2 fs-4"></i>
      <h5 class="mb-0 flex-grow-1 text-uppercase letter-spacing-1"><%= __('recent_posts') %></h5>
    </div>
    <div class="card-body p-3">
      <ul class="list-group list-group-flush">
        <% site.posts.sort('date', -1).limit(10).each(function(post){ %>
          <li class="list-group-item border-0 bg-transparent">
            <a href="<%= url_for(post.path) %>" <% if (post.description) { %> title="<%= post.description %>" <% } %> class="fw-bold text-primary text-uppercase text-decoration-none">
              <i class="bi bi-file-earmark-text me-1"></i><%= post.title %>
            </a>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
<% } %>