<% if (site.tags.length){ %>
  <div class="widget card border-0 shadow-lg mb-4 bg-gradient">
    <div class="card-header bg-dark text-white d-flex align-items-center border-0">
      <i class="bi bi-cloud me-2 fs-4"></i>
      <h5 class="mb-0 flex-grow-1 text-uppercase letter-spacing-1"><%= __('tagcloud') %></h5>
    </div>
    <div class="card-body p-3">
      <ul class="list-inline">
        <% site.tags.random().limit(20).each(function(item){ %>
          <li class="list-inline-item mb-1">
            <a href="<%- url_for(item.path) %>" class="badge bg-info text-dark text-uppercase shadow-sm px-3 py-2 fs-6 text-decoration-none">
              <%= item.name %> <span class="ms-1"><%= item.posts.length %></span>
            </a>
          </li>
        <% }); %>
        <% if (site.tags.length > 20) { %>
          <li class="list-inline-item">
            <a href="<%- config.root %>/tags" class="badge bg-dark text-white text-uppercase shadow-sm px-3 py-2 fs-6 text-decoration-none">...<span class="ms-1"><%= site.tags.length %></span></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
<% } %>
