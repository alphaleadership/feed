<!-- title -->
<div class="page-header bg-primary text-white rounded shadow-sm p-3 mb-4">
  <h1 class="title d-flex align-items-center"><i class="bi bi-tags me-2"></i> <%= page.title %></h1>
</div>
<div class="row">
  <% if (theme.widgets.length) { %>
    <div class="col-lg-9">
  <% } else { %>
    <div class="col-lg-12">
  <% } %>
    <div id="top_search"></div>
    <% if (site.tags.length){ %>
      <div class="card mb-4">
        <div class="card-header bg-light fw-bold"><%= __('tags') %></div>
        <div class="card-body p-2">
          <ul class="list-group list-group-flush">
            <% site.tags.sort(function(a, b){ return b.posts.length - a.posts.length; }).each(function(item){ %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="#<%= item.name %>" class="text-decoration-none text-dark fw-bold">
                  <%= item.name %>
                </a>
                <span class="badge bg-secondary rounded-pill"><%= item.posts.length %></span>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    <% } %>
    <!-- ...archive section modernisÃ©... -->
    <div class="archive">
      <% site.tag_map.sort(function(a, b){ return b.posts.length - a.posts.length; }).each(function(item){ %>
        <div class="mb-3">
          <button class="btn btn-outline-primary w-100 text-start" type="button" data-bs-toggle="collapse" data-bs-target="#modal-<%= item.name %>">
            <%= item.name %> <i class="bi bi-caret-down-fill"></i>
          </button>
          <ul id="modal-<%= item.name %>" class="collapse show list-group list-group-flush">
            <% site.posts.sort('date', -1).forEach(function(it){ %>
              <% if (it.tags.length >= 1) { %>
                <% it.tags.data.forEach(function(data){ %>
                  <% if (data._id == item._id) { %>
                    <li class="list-group-item"><a href="<%= url_for(it.path) %>" <% if (it.description) { %> title="<%= it.description %>" <% } %>><%= it.title %></a></li>
                  <% } %>
                <% }); %>
              <% } %>
            <% }); %>
          </ul>
        </div>
      <% }); %>
    </div>
  </div>
</div>
